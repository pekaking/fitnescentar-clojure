        <li class="pure-menu-item"><a href="/treninzi" class="pure-menu-link">Treninzi</a></li>
	</ul>
	</div>

<div class="container">
    <div class="col-md-4">
        <h3>Izmena treninga</h3>
        <form action="/trening/{{trening.treningid}}/update" method="post" class="pure-form pure-form-aligned">
		<fieldset>
        	<div class="pure-control-group">
                <label for="vezbacid">Vezbac:</label>
                {{#vezbaci}}
                        <option value="{{id}}">{{ime}} {{prezime}}</option>
                        <input type="text" class="vezbacid" name="vezbacid" value="{{vezbac.ime}} {{vezbac.prezime}}" disabled="disabled"/>
                {{/vezbaci}}
                <input type="text" class="vezbacid" name="vezbacid" value="{{vezbac.ime}} {{vezbac.prezime}}" disabled="disabled"/>
            </div>
            <div class="pure-control-group">
                <label for="treningnaziv">Naziv treninga:</label>
                <input type="text" class="form-control" name="treningnaziv" value="{{trening.treningnaziv}}" />
            </div>
            <div class="pure-control-group">
                <label for="treningdatum">Datum treninga:</label>
                <input type="date" class="form-control" name="treningdatum" value="{{trening.treningdatum}}"/>
            </div>
			<div class="pure-controls">
            <button type="submit" class="pure-button pure-button-primary">Zapamti izmene</button>
            </div>
            <a href="/treninzi">Back</a>
        </form>
    </div>
</div>
