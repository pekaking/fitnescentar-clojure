<html>
<head>
<title>Fitnes centar</title>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
</head>
<style>
	img {
		width:100%;
		height: 350px
	}
	.podaci{
		margin-left:25%;
		margin-right: 25%;
	}
	#meni{
		height: 40px;
	}
	.footer{ 
	margin-left:15%;
    display:block;
	width: 960px;
	height: 20px;
	padding-top: 60px;
	text-align: center;
	background: transparent;
	text-shadow: 1px 1px #18330B;
	color: #000;
	font-weight: bold;
	}
	
</style>
<body>

<div class="slika">
		<img src="http://amandajbush.com/wp-content/uploads/2014/01/aulani-weights-at-fitness-center-2050x848.jpg" >
</div>
<div class="podaci">
<div class="pure-menu pure-menu-horizontal" id="meni">
	<ul class="pure-menu-list">
		<li class="pure-menu-item"><a href="/" class="pure-menu-link">FITNES CENTAR</a></li>
		<li class="pure-menu-item"><a href="/vezbaci" class="pure-menu-link">Vezbaci</a></li>
        <li class="pure-menu-item"><a href="/teretane" class="pure-menu-link">Teretane</a></li>
        <li class="pure-menu-item"><a href="/treneri" class="pure-menu-link">Treneri</a></li>
        <li class="pure-menu-item"><a href="/treninzi" class="pure-menu-link">Treninzi</a></li>
	</ul>
	</div>
    <h2>Treninzi</h2>

    <div class="col-md-6">
        <table class="pure-table pure-table-bordered">
		<thead>
            <tr>
                <th>Trening</th>
                <th>Datum</th>
                <th>Vezbac</th>
                <th>Trener</th>
                <th>Teretana</th>
                <th>Izmena</th>
            </tr>
		</thead>
		<tbody>
            {{#treninzi}}
                <tr>
                    <td>{{treningnaziv}}</td>
                    <td>{{treningdatum}}</td>
                    <td>{{ime}} {{prezime}}</td>
                    <td>{{trenerime}} {{trenerprezime}}</td>
                    <td>{{teretanaime}}</td>
                    <td><a href="/treninzi/{{treningid}}/delete">Obrisi trening</a></td>
                </tr>
            {{/treninzi}}
		</tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h4>Unos novog treninga</h4>
        <form action="/treninzi/create" method="post" class="pure-form pure-form-aligned">
		<fieldset>
            <div class="pure-control-group">
                <label for="id">Vezbac:</label>
                <select name="vezbacid" id="id" class="form-control">
                    {{#vezbaci}}
                        <option value="{{id}}">{{ime}} {{prezime}}</option>
                    {{/vezbaci}}
                </select>
            </div>
            <div class="pure-control-group">
	            <label for="treningnaziv">Naziv treninga:</label>
                <input type="text" name="treningnaziv" placeholder="Naziv treninga"/>
			</div>
			<div class="pure-control-group">
                <label for="treningdatum">Datum treninga:</label>
                <input type="date" name="treningdatum" />
            </div>
            <div class="pure-controls">
            <button type="submit" class="pure-button pure-button-primary">Zapamti trening</button>
			</div>
        </fieldset>
		</form>
    </div>
</div>
</div>
<div class="footer">
	Copyright Â© Petar Milisavljevic, 2015.
</div>
</body>
</html>