<html>
    <head>
	<title>Fitnes centar</title>
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    </head>
	<style>
	img {
		width:100%;
		height: 350px
	}
	.podaci{
		margin-left:25%;
		margin-right: 25%;
	}
	#meni{
		height: 40px;
	}
	.footer{ 
	margin-left:15%;
    display:block;
	width: 960px;
	height: 20px;
	padding-top: 60px;
	text-align: center;
	background: transparent;
	text-shadow: 1px 1px #18330B;
	color: #000;
	font-weight: bold;
	}
	
	</style>
    <body>
	
	<div class="slika">
		<img src="http://amandajbush.com/wp-content/uploads/2014/01/aulani-weights-at-fitness-center-2050x848.jpg" >
	</div>
	<div class="podaci">
    <div class="pure-menu pure-menu-horizontal" id="meni">
	<ul class="pure-menu-list">
		<li class="pure-menu-item"><a href="/" class="pure-menu-link">FITNES CENTAR</a></li>
		<li class="pure-menu-item"><a href="/vezbaci" class="pure-menu-link">Vezbaci</a></li>
        <li class="pure-menu-item"><a href="/teretane" class="pure-menu-link">Teretane</a></li>
        <li class="pure-menu-item"><a href="/treneri" class="pure-menu-link">Treneri</a></li>
        <li class="pure-menu-item"><a href="/treninzi" class="pure-menu-link">Treninzi</a></li>
	</ul>
	</div>
            <h2>Vezbaci</h2>
            <a href="/vezbaci/new"><button class="pure-button">Novi vezbac</button></a>
            
            <table class="pure-table pure-table-bordered">
			<thead>
                <tr>
                    <th>Ime i prezime</th>
                    <th>Body mass index</th>
                    <th>Trener</th>
                    <th>Teretana</th>
                    <th>Izmena</th>
                    <th>Brisanje</th>
				</tr>
			</thead>
			<tbody>
                    {{#vezbaci}}
                        <tr>
                        	<td>{{ime}} {{prezime}}</td>
                            <td>{{bmi}}</td>    
                            <td>{{trenerime}} {{trenerprezime}}</td>
                            <td>{{teretanaime}}</td>
                            <td><a href="/vezbaci/{{id}}/edit">Izmeni vezbaca</a></td>
                            <td><a href="/vezbaci/{{id}}/delete">Obrisi vezbaca</a></td>
                        </tr>
                    {{/vezbaci}}
            </tbody>
            </table>
        </div>
	
	<div class="footer">
